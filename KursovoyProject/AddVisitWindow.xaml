<Window x:Class="KursovoyProject.AddVisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursovoyProject"
        mc:Ignorable="d"
        Title="Добавить посещение" Height="550" Width="400">
    <StackPanel Margin="10">
        <Label Content="CarID:" />
        <TextBox Name="CarIDTextBox"/>

        <Label Content="EmpID:" />
        <TextBox Name="EmpIDTextBox"/>

        <Label Content="VisitDate:" />
        <TextBox Name="VisitDateTextBox"/>

        <Label Content="Desc:" />
        <TextBox Name="DescTextBox"/>

        <Label Content="Cost:" />
        <TextBox Name="CostTextBox"/>

        <Label Content="Status:" />
        <TextBox Name="StatusTextBox"/>

        <Label Content="RepairParts:" />
        <ListBox Name="RepairPartsListBox"/>

        <Button Content="Сохранить" Margin="0,10,0,0" Click="SaveButton_Click" />
    </StackPanel>
</Window>
